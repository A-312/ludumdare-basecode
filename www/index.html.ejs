<html class="lang-<%= lang %>">
<head>
  <meta charset="utf-8">
  <meta name="language" content="<%= lang %>" id="metalang">
  <title><%= title %></title>
  <meta name="build_version" content="<%= build_version %>">
  <meta name="description" content="<%= description %>">
  <meta name="keywords" content="<%= keywords %>">
  <link rel="canonical" href="<%= base_url %>" />
  <% Object.keys(alternates).forEach(function(hreflang) { %>
    <% if (lang !== hreflang) %>
      <link rel="alternate" hreflang="<%= hreflang %>" href="<%= $url.resolve(base_url, alternates[hreflang]) %>" />
  <% }) %>
  
  <link rel="icon" sizes="256x256" type="image/png" href="favicon.png">
  <!-- build:analytics --><!-- endbuild -->

  <meta name="viewport" content="initial-scale=1, maximum-scale=1">

  <link rel="stylesheet" type="text/css" href="design/index.css?v=<%= build_version %>">

  <!-- integrity-generated-by=https://www.srihash.org/ -->
  <!-- <script src="https://cdn.jsdelivr.net/npm/phaser@3.22.0/dist/phaser.min.js" integrity="sha384-E6/kPUAXgo7RbVIljG/dTUM6yYwDENpgx7yk8XNK7HM4nMUQP8bKrLkSLKHFFpRc" crossorigin="anonymous"></script> -->
  <script src="https://cdn.jsdelivr.net/npm/phaser@3.22.0/dist/phaser-arcade-physics.min.js" integrity="sha384-sbRSLYCG1MkeJm9jVdd4uEfevY4V+nz+Bv2Z34qWF4phUkehDtlj/pVYkz51IKux" crossorigin="anonymous"></script>
  <script type="text/javascript" src="javascript/index.js?v=<%= build_version %>"></script>

  <!-- twittercard -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:site" content="<%= twitter.account %>">
  <meta name="twitter:creator" content="<%= twitter.account %>">
  <meta property="og:title" content="<%= socialcard.title %>">
  <meta property="og:description" content="<%= socialcard.description %>">
  <meta property="og:image" content="<%= $url.resolve(base_url, socialcard.image) %>">
</head>
<body data-build_version="<%= build_version %>">
  <header>
    <div id="progressbar"></div>
    <div id="toolbar">
      <div>
        <p>Ludum Dare: <span><%= ludumdare %></span></p>
      </div>
      <div>
        <p title="buildversion: <%= build_version %>"><span><%= gamename %><span> v: <span><%= version %></span></p>
      </div>
      <div id="langPicker">
        <p>
          <span>Available languages:</span>
          <% Object.keys(alternates).forEach(function(key) { %>
            <% if (lang !== key) { %>
              <a id="lang-<%= key %>" href="<%= hreflang %>"><%= key %></a>
            <% } else { %>
              <a id="lang-<%= key %>" class="disabled"><%= key %></a>
            <% } %>
          <% }) %>
        </p>
      </div>
    </div>
  </header>
  <main>
    <div id="phaser"></div>
  </main>
  <footer>
    <div id="mainFooter">
      <blockquote>
        <p>
          <% if (locals.footer && footer.text) { %>
            <%- footer.text %>
          <% } else { %>
            <span class="quote">Have fun</span>
          <% } %>
          <span>Website generated by <a href="https://github.com/A-312/ludumdare-basecode">Ludumdare basecode</a></span>
        </p>
      </blockquote>
      <% if (locals.twitter && twitter.account) { %>
        <div id="socialnetwork">
          <a id="twittericon" href="https://twitter.com/<%= twitter.account %>" alt="@<%= locals.account %>" target="_blank">@<%= twitter.account %></a>
        </div>
      <% } %>
      <div>
        <% if (locals.footer && footer.links) { %>
          <% Object.keys(footer.links).forEach(function(name, i) { %>
            <% if (i) { %> â€” <% } %>
            <a href="<%= footer.links[name] %>" target="_blank"><%= name %></a>
          <% }) %>
        <% } %>
      </div>
    </div>
  </footer>
</body>
</html>
